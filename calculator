#include <iostream>
using namespace std;
int main() {
    int a;
    char d;
    int b;
    int c;
    cout<< "Please enter first number: "; cin>> a;
    cout<< "Please enter arithmetic opperation: "; cin>> d;
    cout<< "Please enter second number: "; cin>> b;
    if (d == '+'){
        c = a + b;
    }
    else if (d == '-'){
        c = a - b;
    }
    else if (d == '*'){
        c = a * b;
    }
    else if (d == '/'){
        c = a / b;
    }
    cout<< "The result is: "; cout<< c;
    }
